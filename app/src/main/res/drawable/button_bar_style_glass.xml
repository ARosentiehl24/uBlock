<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/background_light">     <!-- ripple color -->
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <corners android:radius="2.5dp" />
            <stroke
                android:width="1dp"
                android:color="@color/background_light" />
            <solid android:color="@color/glass_10" />
        </shape>
    </item>
</ripple>