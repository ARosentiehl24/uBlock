<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.arrg.app.ublock.views.ApplicationsListActivity"
    tools:showIn="@layout/app_bar_applications_list">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_applications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        android:visibility="invisible" />

    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/progress_bar_margin"
        android:visibility="visible"
        app:mlpb_progress_color="#566da9"
        app:mlpb_progress_stoke_width="2.5dp"
        app:mlpb_show_arrow="true" />
</RelativeLayout>
